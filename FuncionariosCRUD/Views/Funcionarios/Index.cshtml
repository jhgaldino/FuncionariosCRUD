@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}
<table class="table table-bordered table-striped"> 
    <tr>
        <th>Nome</th>
        <th>Cargo</th>   
    </tr>
    @for(int i=0; i< Model.Rows.Count;i++){
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>
                <a href="@Url.Action("Edit","Funcionarios",new {id = Model.Rows[i][0]})">Editar</a> |
                <a href="@Url.Action("Delete","Funcionarios", new {id = Model.Rows[i][0]})">Excluir</a>
            </td>
        </tr>
    }
</table>
<a href ="@Url.Action("Create","Funcionarios")">Adicionar Novo Funcionário</a>